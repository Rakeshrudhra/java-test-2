package java_programs;

public class Pattern_program {

	public static void main(String[] args) {
		for(int i=1;i<=9;i++) {
			for(int j=i;j<=9;j++) {
				System.out.print("  ");
			}
			for(int j=1;j<=i;j++) {
				System.out.print(j+" ");
			}
			for(int j=1;j<i;j++) {
			
				System.out.print(i-j+" ");
			}
			System.out.println();
		}
		

	}

}
